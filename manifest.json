{
  "manifest_version": 3,
  "name": "BrowseBuddy",
  "version": "1.0",

  "permissions": [
        "declarativeNetRequest",
        "storage",
        "activeTab",
        "scripting",
        "bookmarks",
        "tabs",
        "tabGroups"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
 
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js",
            "popup.js",
            "adblocker/adblock.js",
            "bookmark-organizer/bookmark-organizer.js",
            "productivity-tracker/productivity-tracker.js",
            "safety-status/safety-badge.js",
            "safety-status/safety-status.js",
            "screenshot/html2canvas.js",
            "screenshot/screenshot.js",
            "tab-manager/tab-manager.js",
            "translate-summarize/popup.js",
            "translate-summarize/background.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
          "popup.html", 
          "bookmark-organizer.html",
          "safety-status.html",
          "adblock.html", 
          "translator.html",
          "summarizer.html",
          "productivity-tracker.html",
          "screenshot.html",
          "submit-score.html",           
          "index.html", 
          "translate/popup.html",
          "safety-status.js", 
          "content.js", 
          "background.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "popup.html",

  "host_permissions": [
        "*://*/*"
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+Shift+U",
          "linux": "Ctrl+Shift+U",
          "windows": "Alt+Shift+U",
          "mac": "Ctrl+Shift+U"
        }
      }
    }
}